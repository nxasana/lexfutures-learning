<div class="card card-container">
    {% trans_default_domain 'FOSUserBundle' %}
    
    <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
    
    <p id="profile-name" class="profile-name-card"></p>
    
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        
        <input type="text" id="username" name="username" required="required" required autofocus class="form-control" placeholder="Email address"/>
        
        <input type="submit" id="_submit" name="_submit" value="{{ 'resetting.request.submit'|trans }}" class="btn btn-lg btn-primary btn-block btn-signin"/>
        
    </form>
    
    <div>
        Already have an account?
        <a href="{{path('fos_user_security_login')}}" class="forgot-password">
            Signin
        </a>
        <br/>
        Not Registered? 
        <a href="{{path('fos_user_registration_register')}}" class="forgot-password">
            Signup
        </a>
    </div>
</div>

